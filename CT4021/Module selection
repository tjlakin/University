import time
print("1: Buisness Computing" '\n' "2:Computing" '\n' "3:Cyber and Computer Security")
choice = int(input("What course do you take?"))

def selection(choice):
    if choice == 1:
        print("Compulsory:"'\n' "Fundamentals of Programming"'\n'"Smart Buisness Computing"'\n'"Systems Design and Development"'\n')
        time.sleep(1)
        print("Optional:"'\n'"Web Dev"'\n'"Computer and Security")
    elif choice == 2:
        print("Compulsory"'\n' "Fundamentals of Programming"'\n'"Web Dev"'\n'"Systems Design and Development"'\n')
        time.sleep(1)
        print("Optional"'\n'"Smart Business Computing"'\n'"Computer and Security")
    elif choice == 3:
        print("Compulsory"'\n' "Fundamentals of Programming"'\n'"Web Dev"'\n'"Computer and Security"'\n')
        time.sleep(1)
        print("Optional"'\n'"Smart Business Computing"'\n'"Systems Design and Development")
    else:
        print("Not a valid input")
selection(choice)
